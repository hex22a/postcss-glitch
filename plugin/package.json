{
  "name": "postcss-glitch",
  "version": "3.2.38",
  "description": "PostCSS plugin for glitch effect",
  "main": "dist/index.js",
  "repository": "https://github.com/hex22a/postcss-glitch.git",
  "author": "Albert Fazullin <hex22a@gmail.com>",
  "license": "MIT",
  "keywords": [
    "css",
    "postcss",
    "postcss-plugin",
    "glitch",
    "effect",
    "animation"
  ],
  "scripts": {
    "start": "pnpm build:ci",
    "check-types": "tsc",
    "cypress": "cypress open",
    "size": "NODE_ENV=production npx size-limit --why",
    "size:ci": "CI=true NODE_ENV=production npx size-limit",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "test": "jest --ci",
    "jest": "jest",
    "build:ci": "CI=true pnpm build",
    "build:dev": "NODE_ENV=development webpack-cli --mode=development",
    "build": "NODE_ENV=production webpack-cli --mode=production"
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "post-merge": "yarn outdated"
    }
  },
  "size-limit": [
    {
      "limit": "110 KB",
      "config": "./webpack.config.js",
      "path": "./dist/index.js"
    }
  ],
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.28.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-typescript": "^7.28.5",
    "@size-limit/preset-big-lib": "^12.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "babel-polyfill": "^6.26.0",
    "cypress": "^15.9.0",
    "cypress-image-snapshot": "^4.0.1",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-ts-auto-mock": "^2.1.0",
    "pnp-webpack-plugin": "^1.7.0",
    "postcss": "^8.5.6",
    "prettier": "3.8.1",
    "pretty-quick": "^4.2.2",
    "size-limit": "^12.0.0",
    "ts-auto-mock": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-bundle-analyzer": "^5.2.0",
    "webpack-cli": "^6.0.1"
  },
  "browserslist": [
    "last 1 version",
    "> 1%"
  ],
  "peerDependencies": {
    "postcss": "^8.1.1"
  }
}
