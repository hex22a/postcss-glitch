{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "useUnknownInCatchVariables": true,
    "noUncheckedIndexedAccess": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts"]
}
